<%= link_to 'Back', eateries_path %>

<div class="row">
  <div class="col-md-offset-2 col-md-6">
   <div class="panel panel-default">
      <div class="panel-heading center">
        <%= image_tag @eatery.image.url(:medium) %>
      </div>
        <p><strong>Name:</strong>
          <%= @eatery.name %>
        </p>
        <p><strong>Address:</strong>
          <%= @eatery.address %>
        </p>
        <p><%= @eatery.description %></p>

        <% if @eatery.user == current_user %>
          <%= render partial: 'reservations/form', locals: {reservation: @reservation, eatery_id: @eatery.id}  %>
          <%= link_to 'Edit', edit_eatery_path(@eatery) %> |
        <% end %>
    </div>
  </div>
</div>







